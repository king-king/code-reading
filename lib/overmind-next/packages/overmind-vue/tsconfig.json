{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "rootDir": "src",

    "outDir": ".code",
    "newLine": "LF",
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "files": ["src/index.ts", "src/vue3.ts"],
  "exclude": ["node_modules", "dist", "es", "lib", "src/**/*.test.ts"]
}
