{
  "configuration": {
    "extends": [
      "tslint:recommended"
    ],
    "rules": {
      "quotemark": [
        true,
        "single"
      ],

      "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
      "interface-name": [false, "always-prefix"],

      "no-console": [true,
        "time",
        "timeEnd",
        "trace"
      ],
      "max-line-length": [
        true,
        100
      ],
      "no-string-literal": false,
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "quotemark": [
        true,
        "single",
        "avoid-escape"
      ],
      "variable-name": [
        true,
        "allow-leading-underscore",
        "allow-pascal-case",
        "ban-keywords",
        "check-format"
      ]
    }
  },
  "configFile": false,
  "emitErrors": false,
  "failOnHint": true,
  "typeCheck": false,
  "fix": false,
  "tsConfigFile": "tsconfig.json",
  "formatter": "stylish",
  "formattersDirectory": "node_modules/tslint-loader/formatters/",
  "fileOutput": {
    "dir": "./project/report",
    "ext": "xml",
    "clean": true,
    "header": "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<checkstyle version=\"5.7\">",
    "footer": "</checkstyle>"
  }
}

